[
  {%- for post in collections.posts -%}
    {
      "title": {{ post.title | jsonify | safe }},
      "date": "{{ post.published_at }}",
      "url": "{{ post.url }}",
      "excerpt": {{ post.excerpt | jsonify | striptags | safe }},
      "content": {{ post.html | jsonify | striptags | safe }}
    }{% if not loop.last %},{% else %}{%- endif -%}
  {%- endfor -%}
]