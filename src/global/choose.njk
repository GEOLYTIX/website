---
layout: layouts/default.njk
title: Choose
---

<section class="[ hero ] [ bg-dark ]">
  <img src="/img/hero/home.jpg" class="hero__background" alt="Office">
  <div class="wrapper text-align-center">
    <div class="measure-short">
      <h1>{{ "Choose Your Country or Region" | i18n(en) }}</h1>
    </div>
  </div>
</section>

<section class="pad-top-900 pad-bottom-900">
  <div class="wrapper wrapper--short">
    <ul class="auto-grid">
      {% for language in locales.languages %}
        <li class="country-list">
          {% set locale = language.code %}
          {% include '../_includes/partials/flag.njk' %}
          <a href="{{ language.root }}" class="breakout-button">{{ language.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>