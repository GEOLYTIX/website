{% if pagination.previousPageHref or pagination.nextPageHref %}
  <nav class="[ pagination ] [ gap-top-600 text-align-center ]" role="pagination">
    {% if page.permalink != pagination.previousPageHref %}
      <a href="{{ pagination.previousPageHref }}" class="button">Prev page</a>
    {% else %}
      <span>Prev page</span>
    {% endif %}
    {% if page.permalink != pagination.nextPageHref %}
      <a href="{{ pagination.nextPageHref }}" class="button">Next page</a>
    {% else %}
      <span>Next page</span>
    {% endif %}
  </nav>
{% endif %}