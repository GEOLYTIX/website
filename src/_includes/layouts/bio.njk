---
layout: layouts/default.njk
tags:
  - bio
---

<section class="[ bio-block ] [ pad-top-900 pad-bottom-900 bg-dark color-primary-light ]">
  <div class="wrapper wrapper--short">
      {% set image = '/team/' ~ name | firstWord ~ '.jpg' %}
      <img src="{% cloudinary image, 'w_128,h_128,c_crop,g_face' %}" srcset="{% cloudinary image, 'w_128,h_128,c_fill,dpr_2.0' %} 2x" class="bio__image" alt="{{ "Photo of" | i18n }} {{ name }}"> 
    
      <div class="bio-block__overview">
        <h1>{{ name }}</h1>
        <h2 class="text-400 color-primary-light">{{ position }}</h2>

        <ul class="nav">
          <li><a href="{{ linkedin }}" target="_blank" rel="noopener noreferrer">{% include '../../img/icons/linkedin.svg' %}</a></li>
        </ul>
      </div>

      {{ content | i18n | safe }}
    </div>
  </div>
</section>